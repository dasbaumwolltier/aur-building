pkgname=python2-transwhat-git
_pkgname=transwhat
pkgver=v0.2.2.r35.g35afbe5
pkgrel=3
pkgdesc="A gateway between the XMPP and the WhatsApp IM networks"
arch=('any')
conflicts=('python2-transwhat')
provides=('python2-transwhat' 'python2-pillow')
url="https://github.com/stv0g/transwhat"
license=('GPL')
depends=('python2' 'python2-protobuf' 'python2-dateutil' 'python2-e4u' 'python-yowsup>=2' 'spectrum2')
makedepends=('git' 'python2-setuptools')
options=('!strip' '!emptydirs')
source=('git+https://github.com/stv0g/transwhat/'
        'git+https://github.com/python-pillow/Pillow.git'
)
md5sums=('SKIP'
         'SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd "$srcdir/Pillow"
  git checkout 6.2.2
}

package() {
  cd "$srcdir/$_pkgname"
  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1

  install -Dm644 contrib/spectrum@.service "$pkgdir(usr/lib/systemd/system"
  #find etc/ -type f -exec sh -c "install -Dm644 {} $pkgdir/usr/share/transwhat/example/{}" \;
  #find "$pkgdir" -type f -exec sed -i 's#/usr/bin/python2#/usr/bin/python#g' {} \;

  cd "$srcdir/Pillow"
  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}

